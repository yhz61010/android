<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basic_components.examples.animation.PropertyAnimActivity">


    <ImageView
        android:id="@+id/ivBeauty"
        android:layout_width="200dp"
        android:layout_height="235dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnAlpha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beauty" />

    <Button
        android:id="@+id/btnAlpha"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Alpha"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnScale"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Scale"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnAlpha"
        app:layout_constraintStart_toEndOf="@+id/btnAlpha" />

    <Button
        android:id="@+id/btnTranslate"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Translate"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnAlpha"
        app:layout_constraintEnd_toStartOf="@+id/btnRotate" />

    <Button
        android:id="@+id/btnRotate"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Rotate"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnAlpha"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>