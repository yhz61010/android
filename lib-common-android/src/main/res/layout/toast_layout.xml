<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/toast_layout_margin_horizontal"
    android:layout_marginEnd="@dimen/toast_layout_margin_horizontal"
    android:background="@drawable/toast_bg_normal"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:maxWidth="@dimen/toast_max_width"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <!-- android:lineHeight="20sp" -->
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="normal"
        android:gravity="center_vertical"
        tools:text="Hello Michael Leo." />
</LinearLayout>

